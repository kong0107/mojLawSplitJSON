	"category": [
		"廢止法規",
		"內政部"
	],
	"LawModifiedDate": "20130721",
	"discarded": true,
	"histories": [
		"九十八年九月二十一日內政部內授中人字第 0980730060 號令訂定發布全文 11 條；並自發布日施行",
		"一百零二年七月二十一日內政部內授中人字第 1025230237 號令發布廢止"
	],
	"articles": [
		{
			"number": 100,
			"content": [
				{
					"text": "內政部少年之家（以下簡稱本家）為處理內部單位之分工職掌，訂定本細則。"
				}
			]
		},
		{
			"number": 200,
			"content": [
				{
					"text": "主任綜理家務，並指揮、監督所屬人員。"
				}
			]
		},
		{
			"number": 300,
			"content": [
				{
					"text": "秘書權責如下：",
					"children": [
						{
							"text": "一、工作計畫之擬編。"
						},
						{
							"text": "二、文稿之綜核及代判。"
						},
						{
							"text": "三、各單位業務之協調。"
						},
						{
							"text": "四、行政事務之管理。"
						},
						{
							"text": "五、會議之籌備、出席或主持。"
						},
						{
							"text": "六、其他交辦事項。"
						}
					]
				}
			]
		},
		{
			"number": 400,
			"content": [
				{
					"text": "本家設下列課、室：",
					"children": [
						{
							"text": "一、社會工作課。"
						},
						{
							"text": "二、輔導課。"
						},
						{
							"text": "三、行政室。"
						}
					]
				}
			]
		},
		{
			"number": 500,
			"content": [
				{
					"text": "社會工作課掌理下列事項：",
					"children": [
						{
							"text": "一、學員入、出本家、輔導評估、追蹤及管理。"
						},
						{
							"text": "二、社會資源之結合、運用。"
						},
						{
							"text": "三、個案訪視及研究。"
						},
						{
							"text": "四、合作式中途學校之辦理。"
						},
						{
							"text": "五、職能發展之規劃及執行。"
						},
						{
							"text": "六、學員權益之促進。"
						},
						{
							"text": "七、研究考核及提升服務品質。"
						},
						{
							"text": "八、學員就學、就業轉銜。"
						},
						{
							"text": "九、其他有關社會工作事項。"
						}
					]
				}
			]
		},
		{
			"number": 600,
			"content": [
				{
					"text": "輔導課掌理下列事項：",
					"children": [
						{
							"text": "一、學員生活照顧及輔導。"
						},
						{
							"text": "二、心理輔導及諮商。"
						},
						{
							"text": "三、學員課業輔導。"
						},
						{
							"text": "四、學員醫療保健及膳食營養管理。"
						},
						{
							"text": "五、學員家庭聯繫及親職教育。"
						},
						{
							"text": "六、學員適性教育。"
						},
						{
							"text": "七、學員生活自治。"
						},
						{
							"text": "八、其他有關輔導事項。"
						}
					]
				}
			]
		},
		{
			"number": 700,
			"content": [
				{
					"text": "行政室掌理下列事項：",
					"children": [
						{
							"text": "一、秘書、總務、資訊、研考、法制及公關。"
						},
						{
							"text": "二、其他支援服務事項。"
						}
					]
				}
			]
		},
		{
			"number": 800,
			"content": [
				{
					"text": "本家置人事管理員，依法辦理人事管理事項。"
				}
			]
		},
		{
			"number": 900,
			"content": [
				{
					"text": "本家置會計員，依法辦理歲計、會計及統計管理事項。"
				}
			]
		},
		{
			"number": 1000,
			"content": [
				{
					"text": "本家處理業務，實施分層負責制度，依分層負責明細表逐級授權決定。"
				}
			]
		},
		{
			"number": 1100,
			"content": [
				{
					"text": "本細則自發布日施行。"
				}
			]
		}
	]
}