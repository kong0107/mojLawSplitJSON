{
	"pcode": "I0010095",
	"LawLevel": "命令",
	"name": "法務部司法官學院處務規程",
	"category": [
		"行政",
		"法務部",
		"組織目"
	],
	"LawModifiedDate": "20130701",
	"histories": [
		"一百零二年七月一日法務部法令字第 10208515480 號令訂定發布全文 12 條；並自一百零二年七月一日施行"
	],
	"articles": [
		{
			"number": 100,
			"content": [
				{
					"text": "法務部司法官學院（以下簡稱本學院）為處理內部單位之分工職掌，特訂定本規程。"
				}
			]
		},
		{
			"number": 200,
			"content": [
				{
					"text": "院長綜理院務，並指揮、監督所屬人員。"
				}
			]
		},
		{
			"number": 300,
			"content": [
				{
					"text": "主任秘書之權責如下：",
					"children": [
						{
							"text": "一、文稿之綜核及代判。"
						},
						{
							"text": "二、機密及重要文件之處理。"
						},
						{
							"text": "三、各單位之協調及權責問題之核議。"
						},
						{
							"text": "四、重要會議之籌辦。"
						},
						{
							"text": "五、其他交辦事項。"
						}
					]
				}
			]
		},
		{
			"number": 400,
			"content": [
				{
					"text": "本學院設下列組、中心、室：",
					"children": [
						{
							"text": "一、教務組。"
						},
						{
							"text": "二、學務組。"
						},
						{
							"text": "三、犯罪防治研究中心。"
						},
						{
							"text": "四、秘書室。"
						}
					]
				}
			]
		},
		{
			"number": 500,
			"content": [
				{
					"text": "教務組掌理事項如下：",
					"children": [
						{
							"text": "一、養成教育與培訓計畫之擬議及課程編排、講義之印發。"
						},
						{
							"text": "二、教學聯絡。"
						},
						{
							"text": "三、學員報到、重訓及退訓。"
						},
						{
							"text": "四、學員分發學習。"
						},
						{
							"text": "五、學員各項考試及成績紀錄陳報。"
						},
						{
							"text": "六、學員結業證書及學員受訓相關證明文件之核發。"
						},
						{
							"text": "七、圖書資料供應、管理及出版。"
						},
						{
							"text": "八、司法官訓練委員會會議之籌劃。"
						},
						{
							"text": "九、國際及兩岸司法教育交流。"
						},
						{
							"text": "十、其他有關教務事項。"
						}
					]
				}
			]
		},
		{
			"number": 600,
			"content": [
				{
					"text": "學務組掌理事項如下：",
					"children": [
						{
							"text": "一、學員品德學識考查成績之彙辦。"
						},
						{
							"text": "二、學員上課及研習之勤惰考查。"
						},
						{
							"text": "三、學員體育康樂。"
						},
						{
							"text": "四、學員開訓、結訓典禮之籌辦及各種集會活動之辦理。"
						},
						{
							"text": "五、學員週記建議之彙辦。"
						},
						{
							"text": "六、學員獎懲事務之處理。"
						},
						{
							"text": "七、學員請假之彙辦。"
						},
						{
							"text": "八、學員兵役之逐次及儘後召集處理。"
						},
						{
							"text": "九、與學員同膳、值宿及其規劃。"
						},
						{
							"text": "十、其他有關學務事項。"
						}
					]
				}
			]
		},
		{
			"number": 700,
			"content": [
				{
					"text": "犯罪防治研究中心掌理事項如下：",
					"children": [
						{
							"text": "一、犯罪問題與情勢之調查、分析及研究。"
						},
						{
							"text": "二、犯罪統計資料之蒐集及分析。"
						},
						{
							"text": "三、刑事政策之研究、評估、諮詢及建議。"
						},
						{
							"text": "四、犯罪問題學術研討活動之籌辦。"
						},
						{
							"text": "五、犯罪研究刊物之發行。"
						},
						{
							"text": "六、其他有關犯罪防治研究事項。"
						}
					]
				}
			]
		},
		{
			"number": 800,
			"content": [
				{
					"text": "秘書室掌理事項如下：",
					"children": [
						{
							"text": "一、工作計畫之彙訂、工作報告之編擬、各單位公務登記之催查彙報、業務之研究考核及行政革新。"
						},
						{
							"text": "二、一般行政法令及文件處理。"
						},
						{
							"text": "三、院務會議之議事及大事紀要之處理。"
						},
						{
							"text": "四、印信典守及文書、檔案之管理。"
						},
						{
							"text": "五、出納、財務、營繕、採購及其他事務管理。"
						},
						{
							"text": "六、公共關係及新聞發布。"
						},
						{
							"text": "七、駐衛警察及工友（含技工、駕駛）管理。"
						},
						{
							"text": "八、不屬其他各組、中心事項。"
						}
					]
				}
			]
		},
		{
			"number": 900,
			"content": [
				{
					"text": "本學院置人事管理員，依法辦理人事事項。"
				}
			]
		},
		{
			"number": 1000,
			"content": [
				{
					"text": "本學院置主計員，依法辦理歲計、會計及統計事項。"
				}
			]
		},
		{
			"number": 1100,
			"content": [
				{
					"text": "本學院處理業務，實施分層負責制度，依分層負責明細表逐級授權決定。"
				}
			]
		},
		{
			"number": 1200,
			"content": [
				{
					"text": "本規程自中華民國一百零二年七月一日施行。"
				}
			]
		}
	]
}