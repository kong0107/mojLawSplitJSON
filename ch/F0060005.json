	"articles": [
		{
			"number": 100,
			"content": [
				{
					"text": "陸海空軍軍旗，依本條例規定。"
				}
			]
		},
		{
			"number": 200,
			"content": [
				{
					"text": "軍旗種類如左",
					"children": [
						{
							"text": "一、統帥旗。"
						},
						{
							"text": "二、軍事單位旗。"
						},
						{
							"text": "三、官職旗。"
						},
						{
							"text": "四、官階旗。"
						},
						{
							"text": "五、海軍專用旗。"
						}
					]
				}
			]
		},
		{
			"number": 300,
			"content": [
				{
					"text": "統帥旗，為總統統率全國陸海空軍之旗。其旗式如附圖一。"
				}
			]
		},
		{
			"number": 400,
			"content": [
				{
					"text": "軍事單位旗，區分如下：",
					"children": [
						{
							"text": "一、國防部旗。"
						},
						{
							"text": "二、陸軍旗。"
						},
						{
							"text": "三、海軍旗。"
						},
						{
							"text": "四、空軍旗。"
						},
						{
							"text": "五、後備旗。"
						},
						{
							"text": "六、憲兵旗。"
						},
						{
							"text": "七、海軍陸戰隊旗。"
						}
					]
				},
				{
					"text": "前項各款旗式，如附圖二。"
				},
				{
					"text": "軍事單位旗，依前二項規定不足以表示機關、部隊、學校之特性時，得由國防部依實際需要定之。"
				}
			]
		},
		{
			"number": 500,
			"content": [
				{
					"text": "官職旗，區分如下：",
					"children": [
						{
							"text": "一、國防部部長旗。"
						},
						{
							"text": "二、國防部參謀總長旗。"
						},
						{
							"text": "三、國防部陸軍司令旗。"
						},
						{
							"text": "四、國防部海軍司令旗。"
						},
						{
							"text": "五、國防部空軍司令旗。"
						},
						{
							"text": "六、國防部後備指揮官旗。"
						}
					]
				},
				{
					"text": "前項第一款、第二款旗式，如附圖三。第三款至第六款旗式，由國防部定之。"
				},
				{
					"text": "官職旗，依前二項規定不足以表示官職之特性時，得由國防部依實際需要定之。"
				}
			]
		},
		{
			"number": 600,
			"content": [
				{
					"text": "官階旗，為陸海空軍軍官官階識別之旗。其區分及旗式，由國防部定之。"
				}
			]
		},
		{
			"number": 700,
			"content": [
				{
					"text": "海軍專用旗，為海軍艦艇執行任務之旗。其區分如左：",
					"children": [
						{
							"text": "一、艦首旗。"
						},
						{
							"text": "二、海軍資深軍官旗。"
						},
						{
							"text": "三、海軍戰隊長旗。"
						},
						{
							"text": "四、海軍海道測量艦艇桅旗。"
						},
						{
							"text": "五、長旒。"
						},
						{
							"text": "六、其他經國防部核定之專用旗。"
						}
					]
				},
				{
					"text": "前項旗式，由國防部定之。"
				}
			]
		},
		{
			"number": 800,
			"content": [
				{
					"text": "統帥旗，由國防部製作。其他各種軍旗，由國防部統一製頒或授權製頒之。"
				}
			]
		},
		{
			"number": 900,
			"content": [
				{
					"text": "本條例所定各種軍旗之圖說及使用、懸掛、持行之規定，由國防部定之。"
				}
			]
		},
		{
			"number": 1000,
			"content": [
				{
					"text": "本條例施行細則，由國防部定之。"
				}
			]
		},
		{
			"number": 1100,
			"content": [
				{
					"text": "本條例自公布日施行。"
				}
			]
		}
	]
}