{
	"法規性質": "命令",
	"法規名稱": "食用菇類重金屬限量標準",
	"法規網址": "http://law.moj.gov.tw/LawClass/LawOldVer.aspx?PCODE=L0040066&LNNDATE=20070629&LSER=001",
	"法規類別": "行政＞衛生福利部＞食品藥物管理目",
	"異動日期": "20070629",
	"法規內容": [
		{
			"條號": "第 1 條",
			"條文內容": "本標準依食品衛生管理法第十條規定訂定之。"
		},
		{
			"條號": "第 2 條",
			"條文內容": "本標準適用食用菇類之子實體，不適用其菌絲體。"
		},
		{
			"條號": "第 3 條",
			"條文內容": "食用菇類中重金屬含量應符合以下限量：\r\n┌──┬────────┐\r\n│項目│限量（以乾重計）│\r\n├──┼────────┤\r\n│鉛  │3 ppm 以下      │\r\n├──┼────────┤\r\n│鎘  │2 ppm 以下      │\r\n└──┴────────┘"
		},
		{
			"條號": "第 4 條",
			"條文內容": "本標準自發布日施行。"
		}
	]
}