{
	"法規性質": "命令",
	"法規名稱": "生熟食混合即食食品類衛生標準",
	"法規網址": "http://law.moj.gov.tw/LawClass/LawOldVer.aspx?PCODE=L0040073&LNNDATE=20110805&LSER=001",
	"法規類別": "行政＞衛生福利部＞食品藥物管理目",
	"異動日期": "20110805",
	"法規內容": [
		{
			"條號": "第 1 條",
			"條文內容": "本標準依食品衛生管理法第十條規定訂定之。"
		},
		{
			"條號": "第 2 條",
			"條文內容": "生熟食混合即食食品係指同時含有生熟食原料之即食性食品。"
		},
		{
			"條號": "第 3 條",
			"條文內容": "生、熟食混合即食食品之性狀應具原有之良好風味及色澤，不得有腐敗、\r\n不良變色、異臭、異味、污染、發霉或含有異物、寄生蟲。"
		},
		{
			"條號": "第 4 條",
			"條文內容": "生熟食混合即食食品之微生物限量如下：\r\n┌──────────┬─────┐\r\n│      項    目      │  限  量  │\r\n├──────────┼─────┤\r\n│                    │    3     │\r\n│大腸桿菌群（MPN/g） │  10  以下│\r\n├──────────┼─────┤\r\n│大腸桿菌（MPN/g）   │  陰  性  │\r\n└──────────┴─────┘"
		},
		{
			"條號": "第 5 條",
			"條文內容": "本標準自發布日施行。"
		}
	]
}